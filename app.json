{
  "expo": {
    "name": "Brouhaha",
    "slug": "brouhaha-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.brouhaha.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#667eea"
      },
      "package": "com.brouhaha.app"
    },
    "web": {
      "bundler": "metro",
      "entryPoint": "./App.tsx"
    },
    "extra": {
      // ⚠️  SECURITY: Never hardcode secrets here!
      // Use environment variables instead - read from process.env in App.tsx
      // See: https://docs.expo.dev/guides/environment-variables/
    },
    "platforms": ["ios", "android", "web"],
    "plugins": []
  }
}
