# Brouhaha Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains secrets!

# ============================================================================
# AUTHENTICATION - Clerk
# ============================================================================
# Get these from https://clerk.com/
# Never hardcode these values in source code
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# ============================================================================
# DATABASE - Vercel Postgres or Supabase
# ============================================================================
# Get these from your database provider
DATABASE_URL=postgresql://user:password@host:5432/brouhaha
DIRECT_URL=postgresql://user:password@host:5432/brouhaha

# ============================================================================
# PAYMENTS - Stripe
# ============================================================================
# Get these from https://stripe.com/
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_public
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================================================
# VIDEO HOSTING - Bunny.net
# ============================================================================
# Get these from https://bunny.net/
BUNNY_API_KEY=your_bunny_api_key
BUNNY_LIBRARY_ID=your_bunny_library_id
BUNNY_STORAGE_ZONE=your_storage_zone_name
BUNNY_STORAGE_PASSWORD=your_storage_zone_password

# ============================================================================
# DEPLOYMENT - Vercel
# ============================================================================
# These are typically set automatically by Vercel
VERCEL_ENV=production|preview|development
VERCEL_URL=your_vercel_deployment_url

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
# Optional: Add monitoring and error tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project
LOG_LEVEL=info|debug|warn|error

# ============================================================================
# SECURITY
# ============================================================================
# CORS allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# JWT expiration (in hours)
JWT_EXPIRATION=24

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Enable/disable features
FEATURE_VIDEO_STREAMING=true
FEATURE_PAYMENTS=true
FEATURE_CREATOR_TOOLS=true
FEATURE_ADMIN_DASHBOARD=true
